<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/stylesheet.css') }}" />
    {% endblock %}
</head>

<body>
    {% block header %}
    <div class="header">
    <h2>Aprendiendo symfony con tareas</h2>
    <ul id="menu">
         {% if app.user %}
          <li><a href="{{ path('index') }}" />Inicio</a></li>
          <li><a href="{{ path('mis_tareas') }}" />Mis tareas</a></li>
          <li><a href="{{ path('crear_tarea') }}" />Crear Tarea</a></li>
          <li class="right"><a href="" />{{app.user.name ~ ' ' ~ app.user.surname}}</a></li>
          <li class="right"><a href="{{ path('logout') }}" />Cerrar Sesi&oacute;n</a></li>
        {% else %}
           <li><a href="{{ path('login') }}" />Login</a></li>
            <li><a href="{{ path('registrarse') }}" />Registro</a></li>
        {% endif %}
     
    </ul>
    </div>
    <div class="clearfix"></div>
    {% endblock %}
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
</body>

</html>